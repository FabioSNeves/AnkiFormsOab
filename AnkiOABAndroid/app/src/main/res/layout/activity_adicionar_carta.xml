<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_adicionar_carta"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="lucas.com.br.ankioab.AdicionarCarta">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Spinner
            android:hint="Nome"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:id="@+id/spn_deck_id"/>

        <EditText
            android:hint="Frente da Carta"
            style="@style/FontInicial"
            android:textColor="@android:color/background_light"
            android:layout_width="match_parent"
            android:layout_height="183dp"
            android:lines="5"
            android:gravity="top"
            android:id="@+id/card_front"
            android:text="frent card"
            android:textSize="18sp" />

        <EditText
            android:hint="Verso da Carta"
            style="@style/FontInicial"
            android:textColor="@android:color/background_light"
            android:layout_width="match_parent"
            android:layout_height="178dp"
            android:lines="5"
            android:gravity="top"
            android:id="@+id/card_back"
            android:text="verso card"
            android:textSize="18sp" />

        <Button
            android:id="@+id/botaoSalvarCard"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text=" âœ“"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="446dp"
            android:layout_weight="0.02"
            android:elevation="0dp"
            android:textSize="24sp"
            android:textAllCaps="false"
            android:backgroundTint="@android:color/holo_green_dark" />

    </LinearLayout>
</RelativeLayout>
